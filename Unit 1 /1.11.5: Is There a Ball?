// Karel should put a ball on the first spot
// if there isn't one already there and then move.
public class IsThereABallKarel extends SuperKarel
{
    public void run()
    {
        if(ballsPresent())
        {
            move();
        }
        else
        
        if(noBallsPresent())
        {
            putBall();
            move();
        }
    }
}
